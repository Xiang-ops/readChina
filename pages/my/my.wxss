.header .avatar{
  overflow:hidden;  
  display: block;  
  width: 165rpx;  
  height: 165rpx;  
  margin: 20rpx 5rpx 75rpx 34rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.header .username{
  color: #fff;
  font-size: 34rpx;
  margin-top: 115rpx;
  width: 352rpx;
}
.header .exit{
  width: 188rpx;
  height: 64rpx;
  line-height: 63rpx;
  font-size: 30rpx;
  background-image: linear-gradient(to right,#FFF26E, #FFD025);
  color: #CA9300;
  text-align: center;
  margin-top: 28rpx;
  border-radius: 32rpx 0 0 32rpx;
}
.center{
  width: 717rpx;
  height: 198rpx;
  background-color: #fff;
  margin: 21rpx auto 70rpx;
  border-radius: 15rpx;
}
.center .title{
  height: 60rpx;
  width: 100%;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 27rpx;
}
.center .content{
  display: flex;
  flex-direction:row;
}
.center .card{
  width: 33%;
  height: 150rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}
.center .icon{
  width: 42rpx;
  height: 50rpx;
  margin-bottom: 19rpx;
}
.list .nav{
  height: 98rpx;
  width: 717rpx;
  line-height: 98rpx;
  background-color: #fff;
  color: #191919; 
  font-size: 30rpx;
  margin: 25rpx auto;
  border-radius: 15rpx;
}
.list .icon{
  width: 44rpx;
  height: 41rpx;
  margin: 0 20rpx 0 24rpx;
  position: relative;
  top: 8rpx;
}