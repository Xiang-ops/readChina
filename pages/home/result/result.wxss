/* pages/home/result/result.wxss */
.top{
  width: 100%;
  height: 95rpx;
  background-color: #FFBE5A;
  padding-top: 20rpx;
}
.info{
  width: 484rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
}
.from,.to,.days{
  background-color: #eaeaea;
  border:3rpx solid #fff;
  color: #73757a;
  font-size: 22rpx;
  line-height: 57rpx;
  padding-left: 10rpx;
}
.from{
  width: 147rpx;
  border-width: 0 3rpx;
  border-radius: 15rpx 0 0 15rpx;
}
.from .icon{
  width: 23rpx;
  height: 27rpx;
  margin-right: 10rpx;
  position: relative;
  top: 5rpx;
}
.to{
  width: 138rpx;
  border-width: 0 3rpx;
}
.days{
  width: 210rpx;
  border-width: 0rpx;
  border-radius: 0 15rpx 15rpx 0 ;
}
.list{
  width: 100%;
  background-color: #fff;
  padding:35rpx 41rpx 35rpx 35rpx;
}
.list .li{
  width: 674rpx;
  height: 242rpx;
  margin-bottom: 36rpx;
  display: flex;
  flex-direction: row;
}
.list .img{
  width: 231rpx;
  height: 231rpx;
  margin: 4rpx 32rpx 7rpx 4rpx;
  border-radius: 14rpx;
}
.list .content{
  width: 395rpx;
  height: 186rpx;
  margin:27rpx 12rpx 29rpx 0;
}
.content .title{
  width: 383rpx;
  color: #000;
  font-size: 27rpx;
  text-overflow:ellipsis;
  z-index: -1;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.content .block{
  margin-top: 14rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 36rpx;
}
.block .size{
  color: #000;
  font-size: 24rpx;
  background-color: #FFC05F;
  margin-right: 14rpx;
  padding: 3rpx 16rpx 6rpx 17rpx;
  border-radius: 7rpx;
}
.content .price{
  color: #FFB533;
  font-size: 36rpx;
  float: left;
  height: 28rpx;
  line-height: 28rpx;
}
.content .collectionInfo{
  color: #A19D97;
  font-size: 18rpx;
  float: right;
  height: 28rpx;
  line-height: 28rpx;
}