/* pages/home/search/search.wxss */
.search{
  width: 100%;
  height: 80rpx;
  margin:10rpx 0rpx 6rpx;
  padding-top: 11rpx;
  padding-left: 30rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}
.frame{
  width: 589rpx;
  height: 58rpx;
  background-color: #e5e5e5;
  border-radius: 29rpx;
  display: flex;
  flex-direction: row;
}
.search .icon{
  width: 43rpx;
  height: 43rpx;
  margin:9rpx 33rpx 7rpx 15rpx;
}
.search .keyword{
  width: 490rpx;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 24rpx;
}
.search .cancel{
  color: #bababa;
  font-size: 24rpx;
  margin-top: 15rpx;
  margin-left: 30rpx;
  width: 90rpx;
}
.history{
  background-color: #fff;
  width: 100%;
  height: 164rpx;
  margin-bottom: 16rpx;
  padding-top: 22rpx;
  padding-left: 30rpx;
}
.hotSpots{
  background-color: #fff;
  width: 100%;
  height: 196rpx;
  padding-top: 22rpx;
  padding-left: 30rpx;
}
.title{
  color: #9e9e9e;
  font-size: 24rpx;
  margin-bottom: 40rpx;
}
.content{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
.spot{
  margin:0 21rpx 20rpx 0;
  border-radius: 10rpx;
  width: 101rpx;
  height: 64rpx;
  background-color: #e5e5e5;
  color: #9e9e9e;
  font-size: 24rpx;
  line-height: 64rpx;
  text-align: center;
}